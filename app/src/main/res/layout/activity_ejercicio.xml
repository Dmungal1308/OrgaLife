<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MenuActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/supeficie">

        <!-- app/src/main/res/layout/activity_menu.xml -->
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_barra_menu_foreground" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_icono_principal_foreground" />

        <!-- Calendario -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="413dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:background="@color/superficieContenedorAlta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton3">

            <GridLayout
                android:id="@+id/calendario"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:columnCount="7"
                android:rowCount="2">

                <!-- Días de la semana -->
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:background="@color/contenedorPrimario"
                    android:gravity="center"
                    android:text="Lunes"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:background="@color/contenedorPrimario"
                    android:gravity="center"
                    android:text="Martes"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:background="@color/contenedorPrimario"
                    android:gravity="center"
                    android:text="Miércoles"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:background="@color/contenedorPrimario"
                    android:gravity="center"
                    android:text="Jueves"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:background="@color/contenedorPrimario"
                    android:gravity="center"
                    android:text="Viernes"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:background="@color/contenedorPrimario"
                    android:gravity="center"
                    android:text="Sábado"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:background="@color/contenedorPrimario"
                    android:gravity="center"
                    android:text="Domingo"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <!-- TextViews para cada día -->
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="Texto"
                    android:textColor="@color/primario"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="Texto"
                    android:textColor="@color/primario"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="Texto"
                    android:textColor="@color/primario"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="Texto"
                    android:textColor="@color/primario"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="Texto"
                    android:textColor="@color/primario"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="Texto"
                    android:textColor="@color/primario"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="Texto"
                    android:textColor="@color/primario"
                    android:textSize="19sp" />
            </GridLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="411dp"
            android:layout_height="541dp"
            android:layout_marginTop="32dp"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addExerciseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@mipmap/ic_add_foreground"
            app:maxImageSize="60dp"
            app:fabCustomSize="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/superficieContenedorMasAlta"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="131dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Ejercicio"
            android:textSize="25sp"
            android:textColor="@color/primario"
            app:layout_constraintEnd_toStartOf="@+id/imageButton3"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menú desplegable -->
    <include layout="@layout/menu_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>